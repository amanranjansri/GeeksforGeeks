void reverse(string& s, int i, int j)
{
    //base case
    if(i>j)
    {
        return;
    }
    
    swap(s[i],s[j]);
    i++;
    j--;
    
    return  reverse(s,i,j);
}


string reverseWord(string str){
    
  //Your code here
  
 reverse(str, 0, str.length()-1);
 
 cout<<str;
  
  /*
  for(int i = str.length(); i>=0; i--)
  {
      cout<<str[i];
  }*/
}


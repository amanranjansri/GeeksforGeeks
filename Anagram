 bool isAnagram(string a, string b){
        
    sort(a.begin(), a.end());
    sort(b.begin(), b.end());
    
    if(a.length() != b.length())
    {
        return 0;
    }
    else
    {
        for(int i =0; i<a.length(); i++)
        {
            if(a[i] != b[i])
            
                return 0;
            
        }
        return 1;
    } 
    //13-feb-2023
    
    }
